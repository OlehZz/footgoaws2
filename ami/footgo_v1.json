{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "packer-example {{timestamp}}",
      "ssh_private_key_file": "/home/vagrant/aws_key.pem"
    }],
  "provisioners": [{
      "type": "shell-local",
      "inline": ["ansible -i /etc/ansible/ec2.py tag_Name_Packer_Builder --list-hosts"],
      "pause_before": "5s"
  },
  {
      "type": "ansible", 
      "playbook_file": "./ansible_playbook/footgo.yml",
      "inventory_file": "/etc/ansible/ec2.py",
      "ssh_authorized_key_file": "/home/vagrant/aws_key.pem",
      "pause_before": "5s"
  }]
}